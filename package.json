{
  "name": "control-asistencia",
  "description": "Control de asitencia empresarial.",
  "version": "0.2.1",
  "author": "Luis Pura",
  "license": "MIT",
  "keywords": [],
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/artxro/control_asistenciaPF.git"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --win --x64 --ia32 --publish never",
    "build32": "electron-builder build --win --ia32 --publish never",
    "deploy": "electron-builder build --win --ia32 --publish always",
    "compress": "cd .. && tar -zcvf Release/control-asistenciaVF.tar.gz control-asistenciaVF",
    "package": "electron-packager . control-asistencia --overwrite --out=packaged --ignore='^/dist$' --prune --platform=linux --arch=x64 --icon=assets/icons/Logo.icns --disable-gpu"
  },
  "build": {
    "target": "nsis ",
    "icon": "assets/icons/icon.ico",
    "nsis": {
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Control de Asistencia PF"
    }
  },
  "dependencies": {
    "base-64": "^0.1.0",
    "colors": "^1.4.0",
    "cryptr": "^4.0.2",
    "electron-log": "^4.2.0",
    "electron-reload": "^1.5.0",
    "electron-updater": "^4.3.1",
    "filesize": "^6.1.0",
    "fs": "0.0.1-security",
    "jquery": "^3.5.1",
    "macaddress": "^0.5.1",
    "mkdirp": "^1.0.4",
    "node-datetime": "^2.1.2",
    "ping": "^0.2.3",
    "request": "^2.88.2",
    "sha256": "^0.2.0"
  },
  "devDependencies": {
    "electron": "^9.0.0",
    "electron-builder": "^22.7.0",
    "electron-updater": "^4.3.1"
  }
}
