{
  "name": "control-asistencia",
  "description": "Control de asitencia empresarial.",
  "version": "0.1.0",
  "author": "Luis Pura",
  "license": "MIT",
  "keywords": [],
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/artxro/control_asistenciaPF.git"
  },
  "scripts": {
    "start": "electron .",
    "package": "electron-packager . control-asistencia --overwrite --out=packaged --ignore='^/dist$' --prune --platform=linux --arch=x64 --icon=assets/icons/Logo.icns",
    "package-linux": "electron-packager . control-asistenciaVF --overwrite --asar --platform=linux --arch=x64 --icon=assets/icons/png/LogoInstitucional.png --prune=true --out=../release-builds",
    "packageDEB": "electron-installer-debian --src ../dist/control-asistencia-linux-x64 --dest ../dist/DEB_Instaler/ --arch amd64",
    "build": "electron-builder build --win --publish never",
    "deploy": "electron-builder build --win --publish always",
    "compress": "cd .. && tar -zcvf Release/control-asistenciaVF.tar.gz control-asistenciaVF"
  },
  "build": {
    "target": "squirrelWindows ",
    "icon": "/assets/icons/icon.ico",
    "extraFiles": [
      "config.js"
    ],
    "nsis": {
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Control de Asistencia PF"
    }
  },
  "dependencies": {
    "base-64": "^0.1.0",
    "colors": "^1.3.3",
    "cryptr": "^4.0.2",
    "dateformat": "^3.0.3",
    "dns": "^0.2.2",
    "electron-log": "^3.0.7",
    "electron-packager": "^14.2.1",
    "electron-reload": "^1.5.0",
    "electron-updater": "^4.2.2",
    "jquery": "^3.4.1",
    "macaddress": "^0.2.9",
    "min-jquery": "^1.7.0",
    "node-datetime": "^2.1.2",
    "sha256": "^0.2.0",
    "utf8": "^3.0.0"
  },
  "devDependencies": {
    "electron": "^8.0.2",
    "electron-builder": "^22.3.2",
    "electron-packager": "^14.2.1"
  }
}
